{
    "name": "bnf-extensions",
    "displayName": "bnf-extensions",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "grammars": [
            {
                "language": "lc2",
                "scopeName": "source.lc2",
                "path": "languages/syntaxes/lc2.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "bnf-extensions.buildGrammar",
                "title": "Build Grammar"
            },
            {
                "command": "bnf-extensions.createConfigFile",
                "title": "Create Config File"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "bnf-extensions.buildGrammar",
                    "when": "editorLangId == lbnf"
                }
            ]
        },
        "languages": [
            {
                "aliases": [
                    "Lamba Calculus",
                    "lc2"
                ],
                "id": "lc2",
                "extensions": [
                    ".lc2"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/amv146/BNFC-Extensions"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.26.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "tsconfig-paths": "^4.1.1",
        "typescript": "^5.0.0-dev.20221210",
        "vscode-uri": "^3.0.6",
        "xregexp": "^5.1.1"
    },
    "dependencies": {
        "app-root-path": "^3.1.0"
    }
}