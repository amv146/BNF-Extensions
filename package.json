{
    "name": "bnf-extensions",
    "displayName": "bnf-extensions",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/Extension.js",
    "contributes": {
        "grammars": [
            {
                "language": "lc",
                "scopeName": "source.lc",
                "path": "languages/syntaxes/lc.tmLanguage.json"
            },
            {
                "language": "199176507",
                "path": "languages/syntaxes/199176507.tmLanguage.json",
                "scopeName": "source.199176507"
            },
            {
                "language": "178239946",
                "path": "languages/syntaxes/178239946.tmLanguage.json",
                "scopeName": "source.178239946"
            },
            {
                "language": "195061797",
                "path": "languages/syntaxes/195061797.tmLanguage.json",
                "scopeName": "source.195061797"
            }
        ],
        "commands": [
            {
                "command": "bnf-extensions.buildGrammar",
                "title": "Build Grammar"
            },
            {
                "command": "bnf-extensions.createConfigFile",
                "title": "Create Config File"
            },
            {
                "command": "bnf-extensions.parseBNFFile",
                "title": "Parse BNF File"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "bnf-extensions.createConfigFile",
                    "when": "explorerResourceIsFolder",
                    "group": "navigation@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "bnf-extensions.buildGrammar",
                    "when": "editorLangId == lbnf"
                },
                {
                    "command": "bnf-extensions.parseBNFFile"
                }
            ]
        },
        "languages": [
            {
                "aliases": [
                    "Lambda Calculus",
                    "lc"
                ],
                "configuration": "languages/configurations/lc.language-configuration.json",
                "id": "lc",
                "extensions": [
                    ".lc"
                ]
            },
            {
                "aliases": [
                    "Lambda Nat 5",
                    "199176507"
                ],
                "id": "199176507",
                "extensions": [
                    ".lc5"
                ]
            },
            {
                "aliases": [
                    "Lambda Nat 1",
                    "178239946"
                ],
                "id": "178239946",
                "extensions": [
                    ".lc11"
                ]
            },
            {
                "aliases": [
                    "Lambda nAt 4",
                    "195061797"
                ],
                "id": "195061797",
                "extensions": [
                    ".lc4"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && tspath -f",
        "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./out",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/amv146/BNFC-Extensions"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.26.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "tsconfig-paths": "^4.1.2",
        "tscpaths": "^0.0.9",
        "typescript": "^5.0.0-dev.20221210",
        "vscode-uri": "^3.0.6",
        "xregexp": "^5.1.1"
    },
    "dependencies": {
        "app-root-path": "^3.1.0",
        "tspath": "^2.6.8"
    }
}