{
    "name": "bnf-extensions",
    "displayName": "BNF Extensions",
    "description": "",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.73.0"
    },
    "icon": "logo.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/Extension.js",
    "contributes": {
        "grammars": [
            {
                "language": "205135039",
                "path": "languages/syntaxes/205135039.tmLanguage.json",
                "scopeName": "source.205135039"
            }
        ],
        "commands": [
            {
                "command": "bnf-extensions.buildGrammar",
                "title": "Build Grammar"
            },
            {
                "command": "bnf-extensions.createConfigFile",
                "title": "BNF Extensions: Create Config File in Current Directory"
            },
            {
                "command": "bnf-extensions.parseGrammarFile",
                "title": "BNF Extensions: Parse Current Project's Main Grammar File"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "bnf-extensions.createConfigFile",
                    "when": "explorerResourceIsFolder",
                    "group": "navigation@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "bnf-extensions.buildGrammar",
                    "when": "editorLangId == lbnf"
                },
                {
                    "command": "bnf-extensions.parseGrammarFile"
                }
            ]
        },
        "languages": [
            {
                "aliases": [
                    "C--",
                    "205135039"
                ],
                "id": "205135039",
                "extensions": [
                    ".cmm"
                ]
            }
        ]
    },
    "publisher": "alexvallone",
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/Extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "compile": "tsc -p ./ && tspath -f",
        "package": "npx vsce package",
        "publish": "npx vsce publish",
        "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./out",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run build && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/amv146/BNFC-Extensions"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "@types/glob": "^8.0.0",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "esbuild": "^0.17.14",
        "eslint": "^8.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.4",
        "tscpaths": "^0.0.9",
        "typescript": "^5.0.0-dev.20221210",
        "xregexp": "^5.1.1"
    },
    "dependencies": {
        "app-root-path": "^3.1.0",
        "tslint-config-prettier": "^1.18.0"
    }
}