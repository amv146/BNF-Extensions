{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "type": "object",
    "properties": {
        "mainGrammarPath": {
            "description": "",
            "type": "string"
        },
        "languageName": {
            "description": "",
            "type": "string"
        },
        "fileExtensions": {
            "description": "",
            "type": "array",
            "items": {
                "pattern": "^\\.[a-zA-Z0-9]+$",
                "type": "string"
            }
        },
        "grammar": {
            "description": "",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "constant",
                            "keyword",
                            "operator",
                            "comment",
                            "function"
                        ]
                    },
                    "values": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "type",
                    "values"
                ]
            }
        }
    },
    "required": [
        "mainGrammarPath",
        "languageName",
        "fileExtensions",
        "grammar"
    ]
}