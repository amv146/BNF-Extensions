{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Config",
    "definitions": {
        "Config": {
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "languageName": {
                    "type": "string"
                },
                "fileExtensions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "mainGrammarPath": {
                    "type": "string"
                },
                "options": {
                    "$ref": "#/definitions/ConfigOptions"
                },
                "grammar": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ConfigGrammar"
                    }
                }
            },
            "required": [
                "$schema",
                "languageName",
                "fileExtensions"
            ],
            "additionalProperties": false
        },
        "ConfigOptions": {
            "type": "object",
            "properties": {
                "highlightNumbers": {
                    "type": "boolean"
                },
                "highlightStrings": {
                    "type": "boolean"
                },
                "highlightCharacters": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        },
        "ConfigGrammar": {
            "anyOf": [
                {
                    "$ref": "#/definitions/ConfigBlockComment"
                },
                {
                    "$ref": "#/definitions/ConfigGrammarEntry"
                }
            ]
        },
        "ConfigBlockComment": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "blockComment"
                },
                "begin": {
                    "type": "string"
                },
                "end": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "begin",
                "end"
            ],
            "additionalProperties": false
        },
        "ConfigGrammarEntry": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "character",
                        "comment",
                        "constant",
                        "function",
                        "keyword",
                        "number",
                        "operator",
                        "separator",
                        "string",
                        "terminator",
                        "type"
                    ]
                },
                "values": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "type",
                "values"
            ],
            "additionalProperties": false
        }
    }
}